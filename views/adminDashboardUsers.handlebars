<section class="ftco-section">
<div class="container">
<div class="row justify-content-center">
<div class="col-md-6 text-center mb-5">
    {{#if actionCompletedTrue }}
        <p class="alert alert-success">The user value is updated</p>
    {{/if}}
    {{#if actionCompletedFalse }}
        <p class="alert alert-danger">Something went wrong</p>
    {{/if}}
</div>
</div>
<div class="row">
<div class="col-md-12">
<div class="table-wrap">
<table class="table table-responsive-xl">
<thead>
<tr>
<th>&nbsp;</th>
<th>&nbsp;</th>
<th>ID</th>
<th>verification status</th>
<th>active status</th>
<th>Email</th>
<th>Username</th>
<th>Admin Status</th>
<th>&nbsp;</th>
</tr>
</thead>
    {{#each result}}
    <tbody>
        <tr class="alert" role="alert">
            <form action="/admin/allusers" method="post">
                <td>
                <input type="hidden" id="userID" name="userID" value="{{this._id}}">
                <td><button class="btn btn-primary" type="submit">Verify / Disprove</button></td>
                <input name= '_method' value="patch" hidden/>
            </form>
        <div>
            <td class="d-flex align-items-center">
            {{this._id}}
        </div>
        </td>
            <td>{{this.verified}}</td>
            <td class="status">{{this.active}}</span></td>
            <td>{{this.email}}</td>
            <td>{{this.username}}</td>
            <td>{{this.admin}}</td>
            <td>{{this.age}}</td>
        </tr>
    </tbody>
    {{/each}}
</table>
</div>
</div>
</div>
</div>
</section>
