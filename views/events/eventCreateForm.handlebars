<main>   
    <div class="container">
        <form action="/events/create" method="POST" id="event-creation-form" enctype="multipart/form-data">
        
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" class="form-control" placeholder="Enter a title" required><br>
            </div>
            <div class="form-group">
                <label for="overview">Overview:</label>
                <input type="text" name="overview" id="overview" class="form-control" placeholder="Enter Overview" required><br>
            </div>
            <div class="form-group">
                <label for="content">Content:</label>
                <input type="text" name="content" id="content" class="form-control" placeholder="Enter Content" required><br>
            </div>
            <div class="form-group">
                <label class="my-1 mr-2" for="category">Category:</label>
                <select name="category" style="outline:none !important; padding: 5px 10px" class="custom-select my-1 mr-sm-2" id="category">
                    <option value="Music">Music</option>
                    <option value="Food and Drinks">Food and Drinks</option>
                    <option value="Business">Business</option>
                    <option value="Sports">Sports</option>
                    <option value="Health">Health</option>
                    <option value="Hobbies">Hobbies</option>
                    <option value="Arts">Arts</option>
                    <option value="House Parties">Home Party</option>
                </select>
            </div>
            <div class="form-group">
                <label for="tags">Tags:</label>
                <input type="text" name="tags" id="tags" class="form-control" placeholder="Enter tags separated with commas"><br>
            </div>
            <div class="form-group">
                <label for="location">Location:</label>
                <input type="text" name="location" id="location" class="form-control" placeholder="Enter Event's Location"><br>
            </div>
            <div class="form-group">
                <label for="price">Price:</label>
                <input type="number" step="any" name="price" id="price" class="form-control" placeholder="Enter Event's Price"><br>
            </div>
            <div class="form-group">
                <label for="thumbnail_1">Choose Thumbnail 1:</label>
                <input type="file" id="thumbnail_1" name="thumbnail_1" class="form-control" required><br>
            </div>
              <div class="form-group">
                <label for="thumbnail_2">Choose Thumbnail 2:</label>
                <input type="file" id="thumbnail_2" name="thumbnail_2" class="form-control" required><br>
            </div>
              <div class="form-group">
                <label for="thumbnail_3">Choose Thumbnail 3:</label>
                <input type="file" id="thumbnail_3" name="thumbnail_3" class="form-control" required><br>
            </div>
              <div class="form-group">
                <label for="thumbnail_4">Choose Thumbnail 4:</label>
                <input type="file" id="thumbnail_4" name="thumbnail_4" class="form-control" required><br>
            </div>
            {{#if error}}
                <div class="errorDiv">
                    <p>{{error}}</p>
                </div>
            {{/if}}
            
            <button type="submit" class="btn btn-default">Create</button><br><br>
        </form>
    </div>
</main> 
<script>
    //code for auto suggestion for location
          $(document).ready(function(){
            let autocomplete;
            let id = "location";
            autocomplete = new google.maps.places.Autocomplete((document.getElementById(id)),{
                types:['geocode'],
            })
        });
</script>
